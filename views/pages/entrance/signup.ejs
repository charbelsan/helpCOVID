<div id="signup" v-cloak>
  <div class="container" v-if="!cloudSuccess">
    <h1 class="text-center">Inscription</h1>
    <div class="signup-form">
      <p class="text-center">L'inscription vous prend quelques minutes</p>
      <hr/>
      <ajax-form action="signup" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
        <div class="form-group">
          <label for="full-name">Nom complet</label>
          <input class="form-control" id="full-name" type="text"  :class="[formErrors.fullName ? 'is-invalid' : '']" v-model.trim="formData.fullName" placeholder="Sugar daddy" autocomplete="name" focus-first>
          <div class="invalid-feedback" v-if="formErrors.fullName">Entrez votre nom complet</div>
        </div>
        <div class="form-group">
          <label for="email-address">Email</label>
          <input class="form-control" id="email-address" type="email"  :class="[formErrors.emailAddress ? 'is-invalid' : '']" v-model.trim="formData.emailAddress" placeholder="sugar@exemple.com" autocomplete="email">
          <div class="invalid-feedback" v-if="formErrors.emailAddress">Entrer votre email</div>
        </div>
        <div class="form-group">
          <label for="password">Mot de passe</label>
          <input class="form-control" id="password" type="password"  :class="[formErrors.password ? 'is-invalid' : '']" v-model.trim="formData.password" placeholder="••••••••" autocomplete="new-password">
          <div class="invalid-feedback" v-if="formErrors.password">Entrer votre mot de passe</div>
        </div>
        <div class="form-group">
          <label for="confirm-password">Confirmation mot de passe</label>
          <input class="form-control" id="confirm-password" type="password"  :class="[formErrors.confirmPassword ? 'is-invalid' : '']" v-model.trim="formData.confirmPassword" placeholder="••••••••" autocomplete="new-password">
          <div class="invalid-feedback" v-if="formErrors.confirmPassword">Mot de passe incorrecte</div>
        </div>
        
        <div class="form-group">
          <ajax-button type="submit" :syncing="syncing" class="btn-dark btn-lg btn-block">S'inscrire</ajax-button>
        </div>
      </ajax-form>
      <p class="text-center"><a href="/login">Se connecter</a></p>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
